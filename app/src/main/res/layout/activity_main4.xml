<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A16"
    android:padding="20dp">

    <!-- 顶部标题 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Saved Business"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- 第一行：Fluids 和 Events -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">

        <!-- Fluids 卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fluidsCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/eventsCard"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1A1A2E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/fluidsIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/rocket_icon"
                    android:tint="#4ECDC4"
                    android:contentDescription="Fluids" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fluids"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Events 卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/eventsCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/fluidsCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1A1A2E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/eventsIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/space_station_icon"
                    android:tint="#FF6B6B"
                    android:contentDescription="Events" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 第二行：Open Way 和 Traveler -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/row1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Open Way 卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/openWayCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/travelerCard"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1A1A2E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/openWayIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/rover_icon"
                    android:tint="#FFD93D"
                    android:contentDescription="Open Way" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Way"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Traveler 卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/travelerCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/openWayCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1A1A2E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/travelerIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/galaxy"
                    android:tint="#6C5CE7"
                    android:contentDescription="Traveler" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Traveler"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- HASES 大卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/hasesCard"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/row2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#16213E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/hasesIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/double_arrows"
                android:tint="#FFFFFF"
                android:contentDescription="HASES" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HASES"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginStart="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 底部导航区域 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/nav_background"
        android:padding="16dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/homeNav"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/single_arrow"
                android:tint="#4ECDC4"
                android:rotation="270"
                android:contentDescription="Home" />

            <TextView
                android:id="@+id/homeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#4ECDC4"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- HomeView -->
        <LinearLayout
            android:id="@+id/homeViewNav"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/homeNav"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp">

            <ImageView
                android:id="@+id/homeViewIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/single_arrow"
                android:tint="#B0B0B0"
                android:rotation="270"
                android:contentDescription="HomeView" />

            <TextView
                android:id="@+id/homeViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HomeView"
                android:textSize="12sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- BlogView -->
        <LinearLayout
            android:id="@+id/blogViewNav"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/repartNav"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/blogViewIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/single_arrow"
                android:tint="#B0B0B0"
                android:rotation="270"
                android:contentDescription="BlogView" />

            <TextView
                android:id="@+id/blogViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BlogView"
                android:textSize="12sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- REPART -->
        <LinearLayout
            android:id="@+id/repartNav"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/repartIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/single_arrow"
                android:tint="#B0B0B0"
                android:rotation="270"
                android:contentDescription="REPART" />

            <TextView
                android:id="@+id/repartText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REPART"
                android:textSize="12sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>